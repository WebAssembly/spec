(module
  (func (param i64 i64) (result i64)
    (if
      (eq.i64 (getparam 0) (const.i64 0))
      (return
        (add.i64 (getparam 1) (const.i64 1))
      )
    )
    (if
      (eq.i64 (getparam 1) (const.i64 0))
      (return
        (call 0
          (sub.i64 (getparam 0) (const.i64 1))
          (const.i64 1)
        )
      )
    )
    (return
      (call 0
        (sub.i64 (getparam 0) (const.i64 1))
        (call 0 (getparam 0) (sub.i64 (getparam 1) (const.i64 1)))
      )
    )
  )
  (export "ack" 0)
)

