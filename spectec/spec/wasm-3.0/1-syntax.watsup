  | ...

syntax sz hint(desc "pack size") = `8 | `16 | `32 | `64

syntax instr/memory hint(desc "memory instruction") = ...
  | LOAD numtype (sz _ sx)? memidx memarg  hint(show %.LOAD % %)    hint(show %.LOAD#% % %)
    -- (if numtype = Inn /\ sz < $size(Inn))?  ;; TODO: take size implicitly
  | STORE numtype sz? memidx memarg        hint(show %.STORE % %)   hint(show %.STORE#% % %)
    -- (if numtype = Inn /\ sz < $size(Inn))?  ;; TODO: take size implicitly
  | VLOAD vloadop? memidx memarg           hint(show V128.LOAD % %) hint(show V128.LOAD#% % %)
  | VLOAD_LANE sz memidx memarg laneidx    hint(show V128.LOAD#%#_#LANE % % %)
  | VSTORE memidx memarg                   hint(show V128.STORE % %)
  | VSTORE_LANE sz memidx memarg laneidx   hint(show V128.STORE#%#_#LANE % % %)
  | MEMORY.SIZE memidx
  | MEMORY.GROW memidx
  | MEMORY.FILL memidx
  | MEMORY.COPY memidx memidx
  | MEMORY.INIT memidx dataidx
  | ...

syntax instr/data hint(desc "data instruction") = ...
  | DATA.DROP dataidx


syntax expr hint(desc "expression") =
  instr*

syntax instr hint(desc "instruction")

